@model CIS.Models.Vehicle

@{
    ViewData["Title"] = "เพิ่มยานพาหนะ";
}

<h1>เพิ่มยานพาหนะ</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" placeholder="เช่น กก-1234" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" placeholder="เช่น Toyota" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" placeholder="เช่น Commuter" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CarType" class="control-label"></label>
                <select asp-for="CarType" class="form-select" asp-items="Html.GetEnumSelectList<CIS.Models.VehicleType>()"></select>
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SeatCount" class="control-label"></label>
                <input asp-for="SeatCount" class="form-control" type="number" />
                <span asp-validation-for="SeatCount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CalendarColor" class="control-label"></label>
                <input asp-for="CalendarColor" type="color" class="form-control form-control-color" />
                <span asp-validation-for="CalendarColor" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="บันทึก" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">ยกเลิก</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}