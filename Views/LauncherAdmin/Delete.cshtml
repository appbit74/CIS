@model CIS.Models.LauncherLink

@{
    ViewData["Title"] = "ยืนยันการลบ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> ยืนยันการลบข้อมูล</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title mt-3">คุณแน่ใจหรือไม่ที่จะลบลิ้งค์นี้?</h5>
                    <p class="display-6 text-primary my-4">"@Model.Title"</p>

                    <dl class="row text-start bg-light p-3 rounded">
                        <dt class="col-sm-4">URL:</dt>
                        <dd class="col-sm-8 text-break">@Model.TargetUrl</dd>

                        <dt class="col-sm-4">กลุ่ม:</dt>
                        <dd class="col-sm-8">@Model.LauncherGroup?.GroupName</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary me-2">ยกเลิก</a>
                        <button type="submit" class="btn btn-danger">ยืนยัน ลบข้อมูล!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>