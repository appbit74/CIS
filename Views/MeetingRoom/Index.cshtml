@model IEnumerable<CIS.Models.MeetingRoom>

@{
    ViewData["Title"] = "จัดการห้องประชุม";
}

<h1>จัดการห้องประชุม</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> เพิ่มห้องประชุม</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity) คน</td>
                <td>
                    <span style="display:inline-block; width:20px; height:20px; background-color:@item.Color; border:1px solid #ccc; vertical-align:middle;"></span>
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">ใช้งาน</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">ปิดปรับปรุง</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">แก้ไข</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">ดู</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">ลบ</a>
                </td>
            </tr>
        }
    </tbody>
</table>