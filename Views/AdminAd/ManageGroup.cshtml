@model CIS.ViewModels.ManageGroupViewModel
@{
    ViewData["Title"] = "จัดการสมาชิกกลุ่ม";
}

<h1><i class="fas fa-users"></i> สมาชิกกลุ่ม: @Model.GroupName</h1>
<p class="text-muted">@Model.Description</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header bg-light">เพิ่มสมาชิกใหม่</div>
    <div class="card-body">
        <form asp-action="AddMemberToGroup" method="post" class="row g-3">
            <input type="hidden" asp-for="GroupName" />
            <div class="col-auto">
                <input asp-for="NewUsernameToAdd" class="form-control" placeholder="ระบุ Username (เช่น user.a)" required />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> เพิ่มเข้ากลุ่ม</button>
            </div>
        </form>
    </div>
</div>

<h4>สมาชิกปัจจุบัน (@Model.CurrentMembers.Count คน)</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Display Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.CurrentMembers)
        {
            <tr>
                <td>@member.Username</td>
                <td>@member.DisplayName</td>
                <td>@member.Email</td>
                <td>
                    <button class="btn btn-sm btn-outline-danger btn-remove-member" data-group="@Model.GroupName" data-user="@member.Username">
                        <i class="fas fa-minus-circle"></i> นำออก
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="GroupList" class="btn btn-secondary">กลับไปหน้ารายการกลุ่ม</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            const token = $('input[name="__RequestVerificationToken"]').val();

            $('.btn-remove-member').click(function() {
                var group = $(this).data('group');
                var user = $(this).data('user');

                Swal.fire({
                    title: 'ยืนยันการนำออก?',
                    text: `ต้องการนำ ${user} ออกจากกลุ่ม ${group} หรือไม่?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'ใช่, นำออกเลย'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post("/AdminAd/RemoveMemberFromGroup",
                        { groupName: group, username: user, __RequestVerificationToken: token })
                        .done(function(res) {
                            if(res.success) {
                                Swal.fire('สำเร็จ', res.message, 'success').then(() => location.reload());
                            } else {
                                Swal.fire('Error', res.message, 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}