@model IEnumerable<CIS.Models.LauncherLink>

@{
    ViewData["Title"] = "จัดการ Application Links";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-cogs"></i> จัดการ Application Links</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus-circle"></i> เพิ่มลิ้งค์ใหม่</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="text-center">Icon</th>
                        <th>ชื่อระบบ</th>
                        <th>URL</th>
                        <th>ประเภท</th>
                        <th>กลุ่ม</th>
                        <th class="text-center" style="width: 150px;">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center text-primary">
                                @if (!string.IsNullOrEmpty(item.IconClass))
                                {
                                    <i class="@item.IconClass fa-lg"></i>
                                }
                            </td>
                            <td class="fw-bold">@item.Title</td>
                            <td>
                                <span class="text-muted small text-truncate d-inline-block" style="max-width: 200px;">
                                    @item.TargetUrl
                                </span>
                            </td>
                            <td>
                                @if (item.Method == CIS.Models.LaunchMethod.ApiPostAuth)
                                {
                                    <span class="badge bg-warning text-dark"><i class="fas fa-key"></i> API Auth</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Direct Link</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">@item.LauncherGroup?.GroupName</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="แก้ไข">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="ลบ">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>