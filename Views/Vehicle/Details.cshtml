@model CIS.Models.Vehicle

@{
    ViewData["Title"] = "รายละเอียดรถ";
}

<h1>รายละเอียดรถ</h1>

<div>
    <h4>@Model.LicensePlate (@Model.Brand @Model.Model)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LicensePlate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LicensePlate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Brand)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Brand)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Model)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Model)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CarType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CarType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SeatCount)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SeatCount)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CalendarColor)</dt>
        <dd class="col-sm-10">
            <span style="display:inline-block; width:30px; height:30px; background-color:@Model.CalendarColor; border:1px solid #ccc; border-radius:50%;"></span>
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">ใช้งานปกติ</span>
            }
            else
            {

                <span class="badge bg-secondary">ส่งซ่อม/งดใช้</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">แก้ไข</a>
    <a asp-action="Index" class="btn btn-secondary">กลับไปที่รายการ</a>
</div>