@inject CIS.Services.UserDisplayService UserDisplay
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CIS.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body, .navbar, .btn, input, textarea {
            font-family: 'Sarabun', sans-serif;
        }

        .navbar-classic {
            background-color: #4a4a4a;
            border-bottom: 2px solid #2a2a2a;
        }

            .navbar-classic .navbar-brand,
            .navbar-classic .nav-link {
                color: #ffffff !important;
            }

                .navbar-classic .nav-link:hover {
                    color: #b2ebf2 !important;
                }

                .navbar-classic .nav-link.active,
                .navbar-classic .show > .nav-link {
                    color: #b2ebf2 !important;
                }

            .navbar-classic .navbar-text {
                color: #dddddd !important;
            }

        /* Dropdown Item Icons */
        .dropdown-item i {
            width: 20px;
            text-align: center;
            margin-right: 5px;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-classic border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shield-alt"></i>
                    CIS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="News" asp-action="Index">ข่าวสาร</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-calendar-check"></i> ห้องประชุม
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Booking" asp-action="Index">
                                        <i class="fas fa-calendar-alt text-primary"></i> ปฏิทินการจอง
                                    </a>
                                </li>
                                @if (User.IsInRole(@"CRIMCAD\CIS_Admins") || User.IsInRole(@"CRIMCAD\Room_Managers"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">สำหรับผู้ดูแล</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="MeetingRoom" asp-action="Index">
                                            <i class="fas fa-door-open text-warning"></i> จัดการข้อมูลห้อง
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Booking" asp-action="Manage">
                                            <i class="fas fa-tasks text-success"></i> อนุมัติการจอง
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-car-side"></i> ยานพาหนะ
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="VehicleBooking" asp-action="Index">
                                        <i class="fas fa-calendar-alt text-primary"></i> ปฏิทินการจองรถ
                                    </a>
                                </li>
                                @if (User.IsInRole(@"CRIMCAD\CIS_Admins") || User.IsInRole(@"CRIMCAD\Car_Managers"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">สำหรับผู้ดูแล</h6></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Vehicle" asp-action="Index">
                                            <i class="fas fa-car text-warning"></i> จัดการข้อมูลรถ
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="VehicleBooking" asp-action="Manage">
                                            <i class="fas fa-tasks text-success"></i> อนุมัติการจอง
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        @if (User.IsInRole(@"CRIMCAD\HR_Users") ||
                                                User.IsInRole(@"CRIMCAD\CIS_Admins") ||
                                                User.IsInRole(@"CRIMCAD\IT_Staff"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cogs"></i> ระบบจัดการ (Management)
                                </a>
                                <ul class="dropdown-menu">

                                    @if (User.IsInRole(@"CRIMCAD\HR_Users") || User.IsInRole(@"CRIMCAD\CIS_Admins"))
                                    {
                                        <li><h6 class="dropdown-header">งานบุคคล (HR)</h6></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Hr" asp-action="Create">
                                                <i class="fas fa-user-plus text-primary"></i> ลงทะเบียนพนักงานใหม่
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Hr" asp-action="Index">
                                                <i class="fas fa-users text-info"></i> ทะเบียนรายชื่อพนักงาน
                                            </a>
                                        </li>
                                    }

                                    @if ((User.IsInRole(@"CRIMCAD\HR_Users") && User.IsInRole(@"CRIMCAD\IT_Staff")) || User.IsInRole(@"CRIMCAD\CIS_Admins"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    @if (User.IsInRole(@"CRIMCAD\IT_Staff") || User.IsInRole(@"CRIMCAD\CIS_Admins"))
                                    {
                                        <li><h6 class="dropdown-header">สำหรับผู้ดูแลระบบ (IT Admin)</h6></li>

                                        <li>
                                            <a class="dropdown-item" asp-controller="LauncherAdmin" asp-action="Index">
                                                <i class="fas fa-rocket text-primary"></i> จัดการ App Launcher
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ItManage" asp-action="Index">
                                                <i class="fas fa-sync text-success"></i> อนุมัติ User ใหม่ (Sync AD)
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" asp-controller="AdminAd" asp-action="Index">
                                                <i class="fas fa-user-cog text-danger"></i> จัดการผู้ใช้ (AD Users)
                                            </a>
                                        </li>

                                        @if (User.IsInRole(@"CRIMCAD\CIS_Admins"))
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="AdminAd" asp-action="GroupList">
                                                    <i class="fas fa-users-cog text-dark"></i> จัดการกลุ่ม (AD Groups)
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Divisions" asp-action="Index">
                                                    <i class="fas fa-layer-group text-secondary"></i> ตั้งค่าส่วนงาน (Divisions)
                                                </a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark fw-bold">
                                    <i class="fas fa-user-circle text-primary"></i>

                                    สวัสดี, @UserDisplay.GetDisplayName(User.Identity.Name)
                                </span>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CIS (CRIMC Intranet System) - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>