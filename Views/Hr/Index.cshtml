@model IEnumerable<CIS.Models.EmployeeProfile>

@{
    ViewData["Title"] = "ทะเบียนรายชื่อพนักงาน";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users"></i> ทะเบียนรายชื่อพนักงาน (HR)</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> ลงทะเบียนพนักงานใหม่
        </a>
        <a asp-action="Import" class="btn btn-primary">
            <i class="fas fa-file-csv"></i> Import CSV
        </a>

        <form asp-action="SyncAllAdStatus" method="post" class="d-inline" id="syncForm">
            <button type="submit" class="btn btn-warning text-dark" onclick="return confirmSync()">
                <i class="fas fa-sync-alt"></i> ตรวจสอบสถานะ AD ทั้งหมด
            </button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle" id="employeeTable">
                <thead class="table-dark">
                    <tr>
                        <th>วันที่เริ่มงาน</th>
                        <th>ชื่อ - นามสกุล</th>
                        <th>ตำแหน่ง / สังกัด</th>
                        <th>AD Status</th>
                        <th>Emp Status</th>
                        <th class="text-center" style="width: 150px;">การจัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="fw-bold">@item.Title @item.FirstNameTH @item.LastNameTH</div>
                                <small class="text-muted">@item.FirstNameEN @item.LastNameEN</small>
                            </td>
                            <td>
                                <div>@item.Position</div>
                                <small class="text-muted">@item.Division</small>
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div>
                                        @if (item.IsSyncedToAd)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Synced</span>
                                            <div style="font-size:12px;" class="text-success">@item.GeneratedUsername</div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-clock"></i> Pending</span>
                                            <div style="font-size:12px;" class="text-muted">@item.GeneratedUsername</div>
                                        }
                                    </div>

                                    <form asp-action="CheckAdStatus" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-info" title="ตรวจสอบสถานะกับ AD (Re-Check)" data-bs-toggle="tooltip">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            <td>
                                @if (item.Status == CIS.Models.EmployeeStatus.Resigned)
                                {
                                    <span class="badge bg-danger">ลาออก (Resigned)</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">ปกติ (Active)</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="แก้ไขข้อมูล">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    @if (item.Status == CIS.Models.EmployeeStatus.Resigned)
                                    {
                                        <a asp-action="HardDelete" asp-route-id="@item.Id" class="btn btn-sm btn-dark" title="ลบออกจากฐานข้อมูลถาวร">
                                            <i class="fas fa-trash-alt"></i> ลบถาวร
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="แจ้งพ้นสภาพ (Soft Delete)">
                                            <i class="fas fa-user-times"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">ไม่พบข้อมูลพนักงาน</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // 2. แปลงตารางธรรมดาให้เป็น DataTables
            $('#employeeTable').DataTable({
                "language": {
                    "search": "🔍 ค้นหา:",
                    "lengthMenu": "แสดง _MENU_ รายการ",
                    "info": "แสดง _START_ ถึง _END_ จากทั้งหมด _TOTAL_ รายการ",
                    "paginate": {
                        "first": "หน้าแรก",
                        "last": "หน้าสุดท้าย",
                        "next": "ถัดไป",
                        "previous": "ก่อนหน้า"
                    },
                    "zeroRecords": "ไม่พบข้อมูลที่ค้นหา",
                    "infoEmpty": "ไม่มีรายการ",
                    "infoFiltered": "(กรองจากทั้งหมด _MAX_ รายการ)"
                },
                "order": [], // ปิดการเรียง Auto ของ JS (เพื่อให้ยึดตาม Controller ที่เอาแดงขึ้นก่อน)
                "pageLength": 10, // จำนวนรายการต่อหน้า
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // ห้ามเรียงคอลัมน์สุดท้าย (ปุ่มจัดการ)
                ]
            });
        });

        // 3. ฟังก์ชันเดิมสำหรับปุ่ม Sync
        function confirmSync() {
            if (confirm('ระบบจะทำการตรวจสอบพนักงานทุกคนกับ Active Directory อาจใช้เวลาสักครู่... ยืนยันหรือไม่?')) {
                var btn = document.querySelector('#syncForm button');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> กำลังตรวจสอบ...';
                btn.disabled = true;
                document.getElementById('syncForm').submit();
                return true;
            }
            return false;
        }
    </script>
}